<steps>
    <!-- drive out -->
    <step action='Reset_gyro'/>
    <step action='StraightGyro_target' speed='25' rotations='3.3' target='0'/>
    <!-- turn, drive forward, place block -->
    <step action='Tank_rotations' left_speed='-10' right_speed='10' rotations='0.1' />
    <step action='Tank_rotations' left_speed='20' right_speed='20' rotations='0.7' />
    <step action='Motor_onForSeconds' motor='mediumMotor' speed='10' seconds='0.5' gearRatio='1.4' />
    <!-- reverse, turn back -->
    <step action='Delay_seconds' seconds='0.3'/>
    <step action='Tank_rotations' left_speed='-20' right_speed='-20' rotations='0.9' />
    <step action='Turn_from_start_position' speed='5' degrees='0' />
    <!-- drive forward, turn -->
    <step action='Tank_rotations' left_speed='20' right_speed='20.5' rotations='2.5' />
    <step action='Turn_from_start_position' speed='15' degrees='77' /> <!--twice for accuracy-->
    <step action='Turn_from_start_position' speed='5' degrees='77' />
    <!-- drive forward, place block -->
    <step action='Tank_rotations' left_speed='20' right_speed='20' rotations='2.1' />
    <step action='Motor_onForRotations' motor='mediumMotor' speed='10' rotations='0.3' gearRatio='1.4' />
    <!-- reverse, turn to bridge -->
    <step action='Delay_seconds' seconds='0.3'/>
    <step action='Tank_rotations' left_speed='-20' right_speed='-20' rotations='1' />
    <step action='Turn_from_start_position' speed='15' degrees='125' /> <!--twice for accuracy-->
    <step action='Turn_from_start_position' speed='5' degrees='125' />
    <!-- drive onto bridge -->
    <step action='Tank_rotations' left_speed='20' right_speed='20' rotations='1' />
    <step action='Tank_rotations' left_speed='80' right_speed='80' rotations='3' />
    <step action='Do_nothing' />
</steps>